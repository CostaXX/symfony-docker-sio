    {{ form_start(form) }}
	<div class="row">
        <div class="col-6">
            {{ form_row(form.veterinary) }}
        </div>
        <div class="col-4">
            {{ form_row(form.year) }}
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-primary">ok</button>
        </div>
    </div>
	{{ form_end(form) }}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Vétérinaires</th>
                <th>Produit</th>
                <th>Montant</th>
                <th>Année</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for goal in goals %}
            <tr>
                <td>{{ goal.id }}</td>
                <td>{{ goal.veterinary.name }}</td>
                <td>{{ goal.product.name }}</td>
                <td>{{ goal.amount }}</td>
                <td>{{ goal.year }}</td>
                <td>
                    <a href="{{ path('app_goal_show', {'id': goal.id}) }}">voir</a>
                    <a href="{{ path('app_goal_edit', {'id': goal.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun objectifs trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
