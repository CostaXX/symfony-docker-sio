{% extends 'base.html.twig' %}

{% block title %}objectifs{% endblock %}

{% block body %}
    <h1>Liste des objectifs fixés aux vétérinaires</h1>
    <a href="{{ path('app_goal_new') }}" class='btn btn-primary'><i class="bi bi-plus"></i> Nouveau</a>
    {# {{ form_start(form) }}
	<div class="row my-5 align-items-center">
