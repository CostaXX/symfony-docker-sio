{% extends 'base.html.twig' %}

{% block title %}Les activités{% endblock %}

{% block body %}

    <h1>Liste des activités</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for activity in activities %}
            <tr>
                <td>{{ activity.id }}</td>
                <td>{{ activity.description }}</td>
                <td>
                    <a href="{{ path('app_activity_edit',{ 'id': activity.id }) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<a href="{{ path('app_activity_new') }}" class='btn btn-primary'><i class="bi bi-plus"></i> Nouveau</a>
{% endblock %}