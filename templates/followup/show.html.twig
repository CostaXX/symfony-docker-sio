{% extends 'base.html.twig' %}

{% block title %}Suivi{% endblock %}

{% block body %}
<h1>Fiche Suivi</h1>
<table class="table">
        
        <tbody>
            

            <tr>
                <th>id</th>
                <td>{{ followup.id }}</td>
            </tr>

            <tr>
                <th>Vétérinaire</th>
                <td>{{ followup.veterinary.name }}<br>{{ followup.veterinary.address }}<br>{{ followup.veterinary.postalcode }} {{ followup.veterinary.city }}</td>
                
            </tr>
            <tr>
                <th>Contact</th>
                <td>{{ followup.contactName }}</td>
            </tr>
            <tr>
                <th>Commentaires</th>
                <td>{{ followup.comment }}</td>
            </tr>
            <tr>
                <th>Date d'appel</th>
                <td>{{ followup.calldate ? followup.callDate|date('d/m/Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_followup_index') }}">
        <i class="bi bi-chevron-left"></i>
        &nbsp;Retour à la liste
    </a>
    <a href="{{ path('app_followup_edit', {'id': followup.id}) }}"><i class="bi bi-pencil-square"></i> Modifier</a>

    {{ include('followup/_delete_form.html.twig') }}

    
{% endblock %}