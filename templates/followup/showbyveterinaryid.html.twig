{% extends 'base.html.twig' %}

{% block title %}Suivi{% endblock %}

{% block body %}
<h1>Suivi pour {{ followups[0].name }}</h1>
<a href="{{ path('app_followup_new') }}" class='btn btn-primary'><i class="bi bi-plus"></i> Nouveau</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom du contact</th>
                <th>Date de l'appel</th>
                <th>Commentaires</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for followup in followups %}
            <tr>
                <td>{{ followup.id }}</td>
                <td>{{ followup.contactName }} </td>
                <td>{{ followup.callDate ? followup.callDate|date('d/m/Y') : '' }} </td>
                <td>{{ followup.comment }} </td>
                <td>
                    
                    <a href="{{ path('app_followup_show', {'id': followup.id}) }}">voir</a>
                    <a href="{{ path('app_followup_edit', {'id': followup.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_veterinary_show', {'id': veterinaryId}) }}"><i class="bi bi-chevron-left"></i> Retour à la fiche</a>
{% endblock %}
